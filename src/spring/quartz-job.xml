<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="clearTmpJpgQuartzService" class="com.nky.action.task.ClearTmpJpgQuartzService">
	</bean>
	<!-- Method for defining calling object and calling object -->
	<bean id="jobtask_runbatch"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<!-- Class of call -->
		<property name="targetObject">
			<ref bean="clearTmpJpgQuartzService" />
		</property>

		<!-- Method in calling class -->
		<property name="targetMethod">
			<value>start</value>
		</property>
	</bean>

	<!-- each5Perform every minute -->
	<bean id="doTime"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="jobtask_runbatch" />
		</property>
		<!-- cronExpression 0 3 0 ? * * 0 0 12 * * ? -->
		<property name="cronExpression">
			<value>0 */1 * * * ?</value>
		</property>
	</bean>

	<!--General management class If willlazy-init='false'Then the container will execute the scheduler -->
	<bean id="startQuertz" lazy-init="false" autowire="no"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="doTime" />
			</list>
		</property>
	</bean>
</beans>